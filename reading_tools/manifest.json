{
  "name": "Reading Tools for Chrome",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Maps the navigation front and back keys to next and prev (previous) links on any page.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "jquery-1.8.2.min.js", 
        "convert_keys.js", 
        "multiple_keys_detect.js", 
        "prev_next.js", 
        "html_width.js", 
        "lighten.js"
      ]
    }
  ],
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  }
}
